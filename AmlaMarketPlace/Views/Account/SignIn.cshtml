@model AmlaMarketPlace.Models.ViewModels.Account.SignInViewModel

@{
    ViewData["Title"] = "Sign in";
}

<div class="sigin-div">
    <div class="left-column">
        <h2>
            growing fresh <br /> ideas for <br /> ecommerce.
        </h2>
    </div>
    <div class="signin-page-vertical-line"></div>
    <div class="right-column">
        @if (TempData["SignUpMessage"] != null)
        {
            <div class="alert alert-warning m-3 fade show" role="alert" id="tempDataMessage">
                @TempData["SignUpMessage"]
            </div>
        }

        @if (TempData["invalidCredentials"] != null)
        {
            <div class="alert alert-warning m-3 fade show" role="alert" id="tempDataMessage">
                @TempData["invalidCredentials"]
            </div>
        }

        @if (TempData["emailNotRegistered"] != null)
        {
            <div class="alert alert-danger m-3 fade show" role="alert" id="tempDataMessage">
                @TempData["emailNotRegistered"]
            </div>
        }

        @if (TempData["UnexpectedInput"] != null)
        {
            <div class="alert alert-danger m-3 fade show" role="alert" id="tempDataMessage">
                @TempData["UnexpectedInput"]
            </div>
        }

        @if (TempData["VerificationLink"] != null)
        {
            <div class="alert alert-warning m-3 fade show" role="alert" id="tempDataMessage">
                @TempData["VerificationLink"]
            </div>
        }

        @if (TempData["emailNotVerified"] != null)
        {
            <div class="alert alert-warning m-3 fade show" role="alert" id="tempDataMessage">
                @TempData["emailNotVerified"]
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success m-3 fade show" role="alert" id="tempDataMessage">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["SignOutMessage"] != null)
        {
            <div class="alert alert-success m-3 fade show" role="alert" id="tempDataMessage">
                @TempData["SignOutMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger m-3 fade show" role="alert" id="tempDataMessage">
                @TempData["ErrorMessage"]
            </div>
        }
        @if (TempData["PasswordResetSuccess"] != null)
        {
            <div class="alert alert-success m-3 fade show" role="alert" id="tempDataMessage">
                @TempData["PasswordResetSuccess"]
            </div>
        }
        @if (TempData["PasswordResetFailed"] != null)
        {
            <div class="alert alert-danger m-3 fade show" role="alert" id="tempDataMessage">
                @TempData["PasswordResetFailed"]
            </div>
        }
        @if (TempData["ResetPasswordLinkMessage"] != null)
        {
            <div class="alert alert-warning m-3 fade show" role="alert" id="tempDataMessage">
                @TempData["ResetPasswordLinkMessage"]
            </div>
        }
        @if (TempData["EmailVerificationLinkSentSuccessfully"] != null)
        {
            <div class="alert alert-success m-3 fade show" role="alert" id="tempDataMessage">
                @TempData["EmailVerificationLinkSentSuccessfully"]
            </div>
        }
        @if (TempData["EmailVerificationLinkFailedToSend"] != null)
        {
            <div class="alert alert-danger m-3 fade show" role="alert" id="tempDataMessage">
                @TempData["EmailVerificationLinkFailedToSend"]
            </div>
        }

        <h4>Sign in</h4>
        <hr />
        <form asp-action="SignIn" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-between">
                <div title="On checking the box, you will be logged in for 30 minutes." class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>
                <div title="Reset your password." class="">
                    <button type="button" class="btn btn-link text-decoration-none" data-bs-target="#emailVerificationModal" data-bs-toggle="modal">
                        Forgot Password ?
                    </button>
                </div>
            </div>

            <div title="Sign-in" class="form-group fs-5">
                <input type="submit" value="Sign in" class="btn btn-brand-color" />
            </div>
        </form>
        <div class="d-flex justify-content-start">
            <img style="width: 100px;" class="sigin-in-box-brand-logo" src="~/images/layoutimages/amla_marketplace.png" />
        </div>

    </div>
</div>

<!-- Verify Email Modal -->
<div class="modal fade" id="emailVerificationModal" aria-hidden="true" aria-labelledby="emailVerificationLabel" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title fs-5" id="emailVerificationLabel">Verify Your Email</h3>
                <button type="button" class="btn" data-bs-dismiss="modal" aria-label="Close">X</button>
            </div>
            <div class="modal-body">
                <!-- Form for email verification -->
                <form id="emailVerificationForm" asp-controller="Account" asp-action="ForgotPasswordVerifyEmail" method="post">
                    <div class="mb-3">
                        <label for="emailInput" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="emailInput" name="email" placeholder="Enter your email" required>
                    </div>
                    <p>We will send a verification link to your email to verify your identity.</p>
                    <button class="btn btn-primary" type="submit" id="verifyButton">Verify</button>
                </form>
            </div>
            <div class="modal-footer">
                <!-- Optional: You can add additional buttons here if necessary -->
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>

    </script>
}

