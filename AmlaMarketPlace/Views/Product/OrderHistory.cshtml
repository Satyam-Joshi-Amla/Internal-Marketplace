@model IEnumerable<AmlaMarketPlace.Models.DTO.OrderDTO>

@{
    ViewData["Title"] = "Order History";
    int SrNo = 1;
}

<!-- Begin Page Content -->
<!-- Page Heading -->
<div class="mb-4">
    <div class="card-header py-3">
        <h6 class="font-weight-bold text-primary">Order Requests</h6>
    </div>

    <div class="mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>@Html.DisplayNameFor(model => model.BuyerName)</th>
                            <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                            <th>Quantity (work in progress)</th>
                            <th>@Html.DisplayNameFor(model => model.OrderTime)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@SrNo</td>
                                <td>@Html.DisplayFor(modelItem => item.BuyerName)</td>
                                <td>
                                    <a title="View Product" class="nav-link text-truncate" asp-route-id="@item.ProductId" asp-controller="Product" asp-action="ProductDetails" style="max-width: 150px; display: block; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;">
                                        @Html.DisplayFor(modelItem => item.ProductName)
                                    </a>
                                </td>
                                <td></td>
                                <td>@Html.DisplayFor(modelItem => item.OrderTime)</td>
                            </tr>
                            SrNo++; // Incrementing Serial Number
                        }
                    </tbody>
                    @if (Model.Count() > 10) // Add footer if there are more than 10 rows
                    {
                        <tfoot>
                            <tr>
                                <th>Sr. No.</th>
                                <th>@Html.DisplayNameFor(model => model.BuyerName)</th>
                                <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                                <th>Product Quantity</th>
                                <th>@Html.DisplayNameFor(model => model.OrderTime)</th>
                            </tr>
                        </tfoot>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
<!-- End of Main Content -->
