@model IEnumerable<AmlaMarketPlace.Models.DTO.ProductDTO>

@{
    ViewData["Title"] = "User Products";
    int SrNo = 1;
}

<div class="all-Users-list-div">
    <div class="container">
        <div class="all-Users-list-div-heading">
            <h3>List of Uploaded Products</h3>
        </div>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Price)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>@Html.DisplayNameFor(model => model.Inventory)</th>
                        <th>@Html.DisplayNameFor(model => model.StatusValue)</th>
                        <th></th>
                        <th>Actions</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@SrNo</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td>
                                @(item.Description.Length > 50
                                    ? item.Description.Substring(0, 50) + "..."
                                    : item.Description)
                            </td>
                            @* <td>@Html.DisplayFor(modelItem => item.Description)</td> *@
                            <td>@Html.DisplayFor(modelItem => item.Inventory)</td>
                            <td>                                
                                @if (item.StatusValue == "Rejected")
                                {
                                    <span class="bg-warning">@Html.DisplayFor(modelItem => item.StatusValue)</span>
                                }
                                else
                                {
                                    @Html.DisplayFor(modelItem => item.StatusValue)
                                }
                            </td>
                            <td>
                                <form asp-action="EditProduct" asp-route-id="@item.ProductId" method="get">
                                    <button type="submit" class="btn btn-brand-color">Edit</button>
                                </form>
                            </td>
                            <td>
                                @if (item.StatusValue == "Approved")
                                {
                                    if (item.IsPublished == false)
                                    {
                                        <form asp-action="Publish" asp-route-id="@item.ProductId" method="post">
                                            <button type="submit" class="btn btn-brand-color">Publish</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="Unpublish" asp-route-id="@item.ProductId" method="post">
                                            <button type="submit" class="btn btn-danger">Unpublish</button>
                                        </form>
                                    }
                                }

                        </tr>
                        SrNo++; // Increment Serial Number
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

