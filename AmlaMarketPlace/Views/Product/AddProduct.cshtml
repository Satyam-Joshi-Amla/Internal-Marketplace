@model AmlaMarketPlace.Models.ViewModels.Product.AddProductViewModel

@{
    ViewData["Title"] = "AddProduct";
}

<div class="add-product-mainDiv container">
    <div class="add-product-div-heading text-center">
        <h3>Add Product</h3>
    </div>

    <hr />
    <form asp-action="AddProduct" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Inventory" class="control-label"></label>
                    <input asp-for="Inventory" class="form-control" />
                    <span asp-validation-for="Inventory" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>            
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Image">Product Default Image</label>
                    <input type="file" id="Image" name="Image" accept="image/*" required class="form-control" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="OtherImages">Product Rest Images</label>
                    <input type="file" id="OtherImages" name="OtherImages" accept="image/*" multiple class="form-control" />
                </div>
            </div>
        </div>
        <div class="add-and-close-button">
            <input type="submit" value="Add & Close" class="btn btn-brand-color" />
        </div>
    </form>

    @* <div class="">
        <a class="btn btn-brand-color" asp-action="ProductListing" asp-controller="Product">Back</a>
    </div> *@

    @* this button takes to previous page as recorded by browser *@
    <div class="">
        <button class="btn btn-brand-color" onclick="history.back()">Back</button>
    </div>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
